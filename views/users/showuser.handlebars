<header class="page-header">
  <h1>Users</h1>
  <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
  <a href="/users/{{user.id}}/delete" class="btn btn-primary">Delete</a>
</header>


{{#if user }}
  <table class="table">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <a href="/users/{{ user.id }}">{{ user.fname }}</a>
        </td>
        <td>
          <a href="/users/{{ user.id }}">{{ user.lname }}</a>
        </td>
        <td>
          <a href="/users/{{ user.id }}">{{ user.username }}</a>
        </td>
        <td>
          <a href="/users/{{ user.id }}">{{ user.email }}</a>
        </td>
        <td>
          <a href="/users/{{ user.id }}/edit">Edit</a>
        </td>
        <td>
          <a href="/users/{{ user.id }}?_method=delete" class="text-danger">Delete</a>
        </td>
      </tr>
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No user</p>
{{/if }}